<!doctype html>
<html lang="en-US">
  <body>
    <h2>Editing content of <%= @filename %></h2>
    <form action="/<%= @filename %>" method="post">
      <textarea name="content" rows="20" cols="100"><%= @content %></textarea>
      <br>
      <button type="submit">Save Changes</button>
    </form>
  </body>
</html>