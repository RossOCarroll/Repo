<div class="container">
  <h1 class="text-center">Edit Expense</h1>

  <form action="/<%= @expense["id"] %>/edit_expense" method="post" class="p-4 border rounded shadow-sm bg-light">

    <input type="hidden" name="original_name" value="<%= @expense["name"] %>">

    <div class="mb-3">
      <label for="name" class="form-label">Expense Name:</label>
      <input type="text" name="name" id="name" class="form-control" value="<%= @expense["name"] %>">    
    </div>

    <div class="mb-3">
      <label for="amount" class="form-label">Amount:</label>
      <input type="text" name="amount" id="amount" class="form-control" value="<%= @expense["amount"] %>">    
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Category:</label>
      <select name="category" id="category" class="form-select">
        <% @categories.each do |cat| %>
          <option value="<%= cat %>" <%= 'selected' if @expense["category"] == cat %>><%= cat.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="d-flex justify-content-between">
      <button type="submit" class="btn btn-success">Save Changes</button>
      <a href="/home" class="btn btn-secondary">Return</a>
    </div>

  </form>
</div>
